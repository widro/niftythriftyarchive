				placeholder  : 'jdz_img_fixed',
				looking_glass:'jdz_looking_glass_fixed',
				magnified: 'jdz_magnified_fixed'
			}
		});
		var jdz4 = new JDZoom({
			'selector':'a[rel=jdzoom_fixed3]',
			'magnified_pos':'fixed',
			classes: {
				placeholder  : 'jdz_img_fixed',
				looking_glass:'jdz_looking_glass_fixed',
				magnified: 'jdz_magnified_fixed'
			}
		});
	});
	</script>


			<xsl:if test="//View/product/product_visual1_large = ''">
		    {% if product.getProductVisual1Large == '' %}
			<div id="pictures">
				<div class="main_img">
				    {% if product.getProductPrice > '69' %}
					<div style="background:url('/images/images/freeshipping_bogo.png'); width: 74px; height:74px; z-index:5;position:absolute; margin-left:350px;"></div>
				    {% endif %}
					<img class="main_picture" src="/{{product.getProductVisual1}}" />
					<img class="main_picture" src="/{{product.getProductVisual2}}" />
					<img class="main_picture" src="/{{product.getProductVisual3}}" />
				</div>
				<div class="others_img">
					<div class="img">
						<img class="sub_picture" src="/{{product.getProductVisual1}}" />
					</div>
					<div class="img">
						<img class="sub_picture" src="/{{product.getProductVisual2}}" />
					</div>
					<div class="img">
						<img class="sub_picture" src="/{{product.getProductVisual3}}" />
					</div>
				</div>
				
			</div>

		    {% endif %}
		    {% if product.getProductVisual1Large != '' %}
			<div id="pictures">
				<div class="main_img2">

				    {% if product.getProductPrice > '69' %}
					<div style="background:url('/images/images/freeshipping_bogo.png'); width: 74px; height:74px; z-index:5;position:absolute; margin-left:350px;"></div>
				    {% endif %}

					<a rel="jdzoom_fixed" href="/{{product.getProductVisual1Large}}"><img id="page_image1" src="/{{product.getProductVisual1Large}}" style="float:left" /></a>
					<a rel="jdzoom_fixed2" href="/{{product.getProductVisual2Large}}"><img id="page_image2" src="/{{product.getProductVisual2Large}}" style="float:left; display:none; opacity:0;"/></a>
					<a rel="jdzoom_fixed3" href="/{{product.getProductVisual3Large}}"><div style="width:400px;overflow:hidden;"><img id="page_image3" src="/{{product.getProductVisual3Large}}" style="float:left;display:none; opacity:0;" /></div></a>
				</div>
				
				<div class="clear"></div>
				
				<h3 class="zoomh3">
				<span style="display:none">Image <span id="active_thumb">1</span>/3 | </span>
				<img src="/images/images/zoomicon.png" /> <a class="show_full" href="#" title="Show Full Sized" style="text-decoration:none;">View Full Size Image</a>
				</h3>
				
				<div class="others_img2">
					<div class="img_product_thumb img_product_thumb_active">
						<img id="page_thumb1" class="sub_picture2" src="/{{product.getProductVisual1Large}}" height="50"/>
					</div>
					<div class="img_product_thumb">
						<img id="page_thumb2" class="sub_picture2" src="/{{product.getProductVisual2Large}}" height="50" />
					</div>
					<div class="img_product_thumb">
						<img id="page_thumb3" class="sub_picture2" src="/{{product.getProductVisual3Large}}" height="50" />
					</div>
				</div>
				
			</div>

		    {% endif %}





			<div id="product_infos">
				<div id="product_title">
					<div id="product_name">{{ product.getProductName }}</div>
					
					{% if product.getDesignerId  %}
						<div id="product_designer">{{ product.getDesigner.getDesignerName }}</div>
					{% endif %}
				
				</div>
				<div id="product_description">
					{{ product.getProductDescription() }}
					
				    {% if product.getProductTagsize != '' %}
						 Tag size {{ product.getProductTagsize }}
				    {% endif %}

					<a class="show_sizes" href="#" title="Show Sizes"> Estimated Size {{product.getProductCategorySize().getProductCategorySizeValue() }}</a>
					
				</div>
				<div id="product_sizeandcondition">
					<div id="size">
						<div id="size_title">Size</div>
						<div id="size_value">{{product.getProductCategorySize().getProductCategorySizeValue() }}</div>
					</div>
					<div id="condition">
						<div id="condition_title">Condition</div>
						<div id="condition_value">{{product.getProductOverallCondition }}</div>
					</div>
					<div class="clear"></div>
				</div>
				<div id="add_to_basket" class="{{ product.getProductAvailability }}">
					<div style="width:140px; float:left; height:80px;">					
					<div class="price" id="product_price">${{ product.getProductPrice }}</div>
					
					<!--<div class="price old">${{ product.getProductOldPrice }} retail price</div>-->
					
					</div>
					{% if app.user == false %}
					{% else %}
					{% if app.user.isLoved(product.getProductId) %}
					<span class="addtolovehover_page addtolovehover_page_pink" name="love{{ product.getId }}" id="love{{ product.getId }}"></span>
					{% else %}
					<span class="addtolovehover_page" name="love{{ product.getId }}" id="love{{ product.getId }}"></span>
					{% endif %}
					{% endif %}

				    {% if product.getProductAvailability == 'sale' %}
					<div id="p{{ product.getProductId }}_addLink" name="p{{ product.getProductId }}_addLink" class="add_to_cart_btn" title="Add to my basket">
					
					<a href="{{ path('add_item_to_basket', {'productId': product.getProductId}) }}" style="float: right;font-family: Gotham;font-size: 13px;line-height: 53px;text-align: center;width: 192px;cursor: pointer;display: block;background-color: #FF7070;color: #FFFFFF;margin-left: 20px;">add to my cart</a>
					</div>
				    {% endif %}

					<span id="sold_item" class="add_button">
						Sold
					</span>
					<span id="reserved_item" class="add_button">
						Reserved
					</span>
					
					<div class="clear"></div>
					<div id="ajax_result"></div>
				</div>

				<div class="product_main_right_collapseable" id="detail_condition">
					<div id="top">
						Condition <span id="productplus">+</span>
					</div>
					<div id="bottom">
						<span class="title"></span>
					    {% if product.productDetailedConditionValue == '5' %}
							<span class="{class}">•••••</span>
					    {% endif %}
					    {% if product.productDetailedConditionValue == '4' %}
							<span class="{class}">••••</span>
					    {% endif %}
					    {% if product.productDetailedConditionValue == '3' %}
							<span class="{class}">•••</span>
					    {% endif %}
					    {% if product.productDetailedConditionValue == '2' %}
							<span class="{class}">••</span>
					    {% endif %}
					    {% if product.productDetailedConditionValue == '1' %}
							<span class="{class}">•</span>
					    {% endif %}
						
						
						
						
						/ {{ product.getProductDetailedConditionDescription }}
					</div>
				</div>
				<div class="product_main_right_collapseable" id="detail_fabric">
					<div id="top">
						Fabric <span id="productplus">+</span>
					</div>
					<div id="bottom">
						{{ product.getProductFabric }} 
					</div>
				</div>
				<div class="product_main_right_collapseable" id="detail_measurements">
					<div id="top">
						Measurements <span id="productplus">+</span>
					</div>
					<div id="bottom">
						{{ product.getProductMeasurements }} 
						<a class="show_sizes" href="#" title="Show Sizes"> (?)</a>
					</div>
				</div>
				<div class="product_main_right_collapseable" id="detail_shipping">
					<div id="top">
						Shipping and returns <span id="productplus">+</span>
					</div>
					<div id="bottom">
						You should receive this within 7 days. If you are not completely satisfied, you can return the item within 30 days for a full refund. <a href="{//Statics/Site/Various/url/page_shipping_and_returns}" title="">(?)</a>
					</div>
				</div>

				<div class="clear"></div>
				<div id="social">
					<div class="addthis_toolbox addthis_default_style ">
						<a class="addthis_button_facebook_like"></a>
						<a class="addthis_button_tweet"></a>
						<a class="addthis_button_pinterest_pinit"></a>
						<a class="addthis_counter addthis_pill_style"></a>
						<script type="text/javascript">var addthis_config = {"data_track_addressbar":true};</script>
						<script type="text/javascript" src="https://s7.addthis.com/js/300/addthis_widget.js#pubid=ra-506451ea19f14f3e"></script>
					</div>
				</div>
			</div>
			<div class="clear"></div>
		</div>


		<div id="suggest">
			<div id="suggest_title">we suggest...</div>
			<div id="suggested_products">
            {% for product in suggestproducts %}
							<div class="product">									
								<div id="addtocarthoverdiv">
									{% if app.user == false %}
									{% else %}
									{% if app.user.isLoved(product.getProductId) %}
									<span class="addtolovehover addtolovehover_pink" name="love{{ product.getId }}" id="love{{ product.getId }}"></span>
									{% else %}
									<span class="addtolovehover" name="love{{ product.getId }}" id="love{{ product.getId }}"></span>
									{% endif %}
									{% endif %}
									
									{% if product.getProductAvailability == 'sale' %}
									<div class="clear"></div>
									<span class="addtocarthover" name="{{ product.getId }}" id="{{ product.getId }}">add to cart</span>
									{% endif %}
								</div>
								<div class="img">
									{% if app.user == false %}
									{% else %}
									{% if app.user.isLoved(product.getProductId) %}
									<div class="loveheartongallery loveheartongallery_pink"></div>
									{% else %}
									<div class="loveheartongallery"></div>
									{% endif %}
									{% endif %}

									<a href="{{ path('show_item', {'slug': product.getProductName|slugify}) }}-{{ product.getId }}" title="{{ product.getProductName }}">

								    {% if product.getProductVisual1Large == '' %}
										<img class="product_img" src="/{{product.getProductVisual1}}" />
									{% endif %}
								    {% if product.getProductVisual1Large != '' %}
										<img class="product_img2" src="/{{product.getProductVisual1Large}}" />
									{% endif %}

									</a>
								</div>
								<div class="infos">
									<div class="product_separator"></div>
									<div class="product_name">{{ product.getProductName }}</div>

									<div class="product_designer">
									{% if product.getDesignerId > '0' %}
									{{product.getDesigner.getDesignerName() }}
									{% endif %}
									</div>

									{% if product.getProductOldPrice > '0' %}
										<div class="price old">${{ product.getProductOldPrice }}</div>
									{% endif %}
									<div class="price">${{ product.getProductPrice }}</div>
									<div class="size">
										<div class="size_left"></div>
										<div class="size_value">{{product.getProductCategorySize.getProductCategorySizeValue}}</div>
										<div class="size_right"></div>
									</div>
									<div class="clear"></div>
								</div>

								<div class="product_separator"></div>

								    {% if product.getProductAvailability != 'sale' %}
									<div class="status {product_availability}"></div>
									{% endif %}
							</div>	
            {% endfor %}
				<div class="clear"></div>
			</div>
		</div>
		<div class="clear"></div>













