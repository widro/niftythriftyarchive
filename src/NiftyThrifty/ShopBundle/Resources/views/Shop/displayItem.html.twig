			'selector':'a[rel=jdzoom_fixed]',
			'magnified_pos':'fixed',
			classes: {
				placeholder  : 'jdz_img_fixed',
				looking_glass:'jdz_looking_glass_fixed',
				magnified: 'jdz_magnified_fixed'
			}
		});
		var jdz3 = new JDZoom({
			'selector':'a[rel=jdzoom_fixed2]',
			'magnified_pos':'fixed',
