{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'ProductCategorySize'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>ProductCategorySize</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Productcategorysizeid</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.productCategorySizeId }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Productcategorysizename</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.productCategorySizeName }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Productcategorysizevalue</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.productCategorySizeValue }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Productcategorysizeorder</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.productCategorySizeOrder }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Productcategoryid</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.productCategoryId }}</span>            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('product_category_size_admin') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('product_category_size_admin_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('product_category_size_admin_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}