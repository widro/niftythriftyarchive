{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Coupon'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>Coupon</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Couponid</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.couponId }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Couponcode</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.couponCode }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Coupondatestart</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.couponDateStart|date('Y-m-d H:i:s') }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Coupondateend</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.couponDateEnd|date('Y-m-d H:i:s') }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Couponpercent</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.couponPercent }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Couponamount</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.couponAmount }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Couponquantitylimited</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.couponQuantityLimited }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Couponquantity</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.couponQuantity }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Couponunique</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.couponUnique }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Coupondateadd</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.couponDateAdd|date('Y-m-d H:i:s') }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Couponfreeshipping</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.couponFreeShipping }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Userid</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.userId }}</span>            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('coupon_admin') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('coupon_admin_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('coupon_admin_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}