{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'ProductTag'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>ProductTag</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Producttagid</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.productTagId }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Producttagname</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.productTagName }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Producttagslug</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.productTagSlug }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Producttagtypeid</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.productTagtypeId }}</span>            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('product_tag_admin') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('product_tag_admin_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('product_tag_admin_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}
