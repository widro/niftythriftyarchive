{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Banner'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>Banner</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Bannerid</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.bannerId }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Description</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.description }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Url</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.url }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Isdefault</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.isDefault }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Bannerimage</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.bannerImage }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Bannertype</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.bannerType }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Rotationstarttime</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.rotationStartTime|date('Y-m-d H:i:s') }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Rotationendtime</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.rotationEndTime|date('Y-m-d H:i:s') }}</span>            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('banner_admin') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('banner_admin_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('banner_admin_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}
